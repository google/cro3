{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "google",
    "prettier",
    "plugin:react/recommended"
  ],
  "parser": "@babel/eslint-parser",
  "plugins": [
    "prettier",
    "react",
    "react-hooks",
    "babel"
  ],
  "rules": {
    "babel/no-invalid-this": 1,
    "jsx-quotes": [
      2,
      "prefer-single"
    ],
    "no-invalid-this": 0,
    "prettier/prettier": [
      "error"
    ],
    "react-hooks/exhaustive-deps": "warn",
    "react-hooks/rules-of-hooks": "error",
    "require-jsdoc": 0
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
